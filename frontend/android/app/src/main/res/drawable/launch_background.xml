    <item android:drawable="@android:color/white" />

    <!-- You can insert your own image assets here -->
    
    <!-- This sets our custom image as the the splash screen image -->
    <item>
        <bitmap
            android:gravity="center"
            android:src="@drawable/splash_image"/>
    </item> 
</layer-list>
